			String fecha_s =  validar_regex.validar_reg_fecha( titulo);
			
			fecha.comprobarFechas();
			
			if (!fecha.comprobarFechas()) {
				JOptionPane.showMessageDialog(null, "Fecha Inv치lida");
			} else {
				
			}
			
		}while(!valido);
		
		return fecha;
	}
	
	

}
