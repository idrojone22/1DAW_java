public class test {

	public static void main(String[] args) {
		Object ID_menu = null;
		Object op_ID[] = {};
		
		ArrayList<String> lista = new ArrayList<>();
        lista.add("Hola");
        lista.add("Mundo");
        lista.add("Java");
        
        Object[] op_ID = convertirArrayListAObject(lista);
        
        public static Object[] convertirArrayListAObject(ArrayList<?> arrayList) {
            // Convierte cada elemento a String y lo guarda en un Object[]
            return arrayList.stream().map(Object::toString).toArray();
        }
		
	}
