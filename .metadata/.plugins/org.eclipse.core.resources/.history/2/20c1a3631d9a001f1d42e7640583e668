package object_fecha;

import java.text.ParseException;

import javax.swing.JOptionPane;

public class CRUD {
	
	/*CREATE*/
	public static Fecha create() throws ParseException  {
		
		 Fecha fecha = null;
		    do {
		        int dia = validadors.validar_int("Dime un dia", "dia");
		        int mes = validadors.validar_int("Dime un mes", "mes");
		        int ano = validadors.validar_int("Dime un ano", "ano");

		        fecha = new Fecha(dia, mes, ano);

		        // Comprova si la data és vàlida abans de sortir del bucle
		        if (!fecha.comprobarFechas()) {
		            JOptionPane.showMessageDialog(null, "Fecha inválida");
		        } else {
		            return fecha; // Retorna només si la data és vàlida
		        }
		    } while (true); // Repeteix fins que la data sigui vàlida
	}
/*CREATE*/
}
