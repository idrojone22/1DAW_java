package object_fecha;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;
import java.util.GregorianCalendar;

import javax.swing.JOptionPane;

import tema4_v3.validadors;
import tema4_v3.validar_regex;

public class test {

	public static void main(String[] args) throws ParseException {

		Fecha fecha = null;
		
		String fecha_i =  validadors.validar_string("Dame un String", "titulo");
		
		fecha = new Fecha (fecha_i);
		JOptionPane.showMessageDialog(null, fecha.toCalendar());
		//JOptionPane.showMessageDialog(null, fecha.get_dia());
		//JOptionPane.showMessageDialog(null, fecha.get_mes());
		//JOptionPane.showMessageDialog(null, fecha.get_anio());
		JOptionPane.showMessageDialog(null, fecha.toString());
		
		try {
            Fecha miFecha = new Fecha("04/11/2023");
            Calendar calendario = miFecha.toCalendar();

            // Formateador para imprimir la fecha en un formato legible
            SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
            String fechaFormateada = sdf.format(calendario);
            System.out.println("Fecha en Calendar: " + fechaFormateada);
        } catch (Exception e) {
            e.printStackTrace();
        }
	}
}
